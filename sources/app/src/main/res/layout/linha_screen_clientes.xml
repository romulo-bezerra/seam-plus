<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCliente"
                android:layout_width="258dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Cliente"
                android:textAlignment="textStart"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvPrioridade"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingRight="10dp"
                android:text="Prioridade"
                android:textAlignment="textEnd"
                android:textColor="@android:color/holo_red_dark" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llValor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnDividaCliente"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="Button"
                android:textAlignment="textStart"
                android:textColor="@android:color/background_dark" />

            <ImageButton
                android:id="@+id/btnDescontarValorDivida"
                android:layout_width="53dp"
                android:layout_height="35dp"
                android:layout_marginRight="20dp"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_remove_circle_outline_green_24dp" />

            <LinearLayout
                android:layout_width="162dp"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnVisualizarCliente"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_visibility_blue_24dp" />

                <ImageButton
                    android:id="@+id/btnEditarCliente"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_edit_blue_24dp" />

                <ImageButton
                    android:id="@+id/btnDeletarCliente"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_delete_red_24dp" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>